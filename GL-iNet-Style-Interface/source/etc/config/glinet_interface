# GL.iNet Style Interface Configuration
# /etc/config/glinet_interface

config interface 'settings'
    option enabled '1'
    option port '80'
    option https_port '443'
    option session_timeout '1800'
    option theme 'default'
    option language 'en'
    option timezone 'UTC'

config auth 'auth'
    option jwt_secret ''
    option max_sessions '10'
    option login_attempts '5'
    option lockout_time '300'
    option token_expiry '1800'
    option refresh_expiry '604800'

config user 'admin'
    option username 'admin'
    option password ''
    option salt ''
    option role 'admin'
    option created ''
    option last_login ''

config dashboard 'dashboard'
    option show_cpu '1'
    option show_memory '1'
    option show_network '1'
    option show_clients '1'
    option refresh_interval '5'
    option traffic_unit 'auto'

config network 'monitoring'
    option enable_traffic_stats '1'
    option traffic_history_days '7'
    option client_tracking '1'
    option bandwidth_control '0'

config vpn 'settings'
    option auto_connect '0'
    option kill_switch '0'
    option dns_leak_protection '1'
    option split_tunnel '0'

config notifications 'alerts'
    option wan_disconnect '1'
    option high_cpu '1'
    option high_memory '1'
    option new_device '1'
    option firmware_update '1'

config advanced 'features'
    option enable_api '1'
    option api_key ''
    option remote_access '0'
    option debug_mode '0'
    option log_level 'info'